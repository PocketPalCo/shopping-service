# Shopping Service Configuration

# Environment
SSV_ENVIRONMENT=local

# Server Configuration  
SSV_SERVER_BIND_ADDR=0.0.0.0:3001
SSV_SERVER_READ_TIMEOUT=60

# Logging
SSV_LOG_FORMAT=text
SSV_LOG_LEVEL=info

# Rate Limiting
SSV_RATE_LIMIT_MAX=100
SSV_RATE_LIMIT_WINDOW=30

# Database Configuration
SSV_DB_HOST=localhost
SSV_DB_PORT=5432
SSV_DB_SSL=disable
SSV_DB_USER=postgres
SSV_DB_PASSWORD=postgres
SSV_DB_DATABASE=pocket-pal
SSV_DB_MAX_CONNECTIONS=100

# Swagger
SSV_SWAGGER_HOST=localhost:3001

# Redis Configuration
SSV_REDIS_HOST=localhost
SSV_REDIS_PORT=6379
SSV_REDIS_DB=0
SSV_REDIS_USER=redis
SSV_REDIS_PASS=redis

# Telemetry
SSV_OTLP_ENDPOINT=localhost:4317
SSV_JAEGER_ENDPOINT=http://localhost:14268/api/traces

# Telegram Bot Configuration
# Get your bot token from @BotFather on Telegram
SSV_TELEGRAM_BOT_TOKEN=your_bot_token_here
SSV_TELEGRAM_DEBUG=false

# Comma-separated list of Telegram user IDs who can use admin commands
# To get your Telegram ID, message @userinfobot on Telegram
SSV_TELEGRAM_ADMINS=123456789,987654321

# OpenAI Configuration
SSV_OPENAI_API_KEY=your_openai_api_key_here
SSV_OPENAI_MODEL=gpt-5-nano
SSV_OPENAI_BASE_URL=https://api.openai.com/v1
SSV_OPENAI_MAX_TOKENS=300
SSV_OPENAI_TEMPERATURE=0.1
SSV_OPENAI_USE_RESPONSES_API=true
SSV_OPENAI_STORE=true
SSV_OPENAI_REASONING_EFFORT=medium

# STT Service Configuration
# URL of the Speech-to-Text service for audio transcription
SSV_STT_SERVICE_URL=http://localhost:8000

# Cloud Storage Configuration
# Supported providers: azure (aws and gcp coming soon)
SSV_CLOUD_PROVIDER=azure

# Azure Blob Storage Configuration
# Option 1: Use connection string (recommended - get from Azure Portal)
SSV_AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=your_account;AccountKey=your_key;EndpointSuffix=core.windows.net

# Option 2: Use account name and key separately (alternative to connection string)
SSV_AZURE_STORAGE_ACCOUNT_NAME=your_storage_account_name
SSV_AZURE_STORAGE_ACCOUNT_KEY=your_storage_account_key

# Container name for storing files (will be created if it doesn't exist)
SSV_AZURE_STORAGE_CONTAINER_NAME=files

# Optional: Custom base URL for blob access (leave empty for default)
SSV_AZURE_STORAGE_BASE_URL=

# Whether to use HTTPS for blob URLs (recommended: true)
SSV_AZURE_STORAGE_USE_HTTPS=true

# Azure Document Intelligence Configuration
# Endpoint URL for Azure Document Intelligence service (get from Azure Portal)
SSV_AZURE_DOCUMENT_INTELLIGENCE_ENDPOINT=https://your_region.api.cognitive.microsoft.com/

# API key for Azure Document Intelligence (get from Azure Portal)
SSV_AZURE_DOCUMENT_INTELLIGENCE_API_KEY=your_document_intelligence_api_key

# API version for Document Intelligence (2024-11-30 is latest GA version)
SSV_AZURE_DOCUMENT_INTELLIGENCE_API_VERSION=2024-11-30

# Model ID for receipt processing (prebuilt-receipt is recommended)
SSV_AZURE_DOCUMENT_INTELLIGENCE_RECEIPT_MODEL=prebuilt-receipt