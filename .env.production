# Shopping Service Production Configuration

# Environment
SSV_ENVIRONMENT=production

# Server Configuration
SSV_SERVER_BIND_ADDR=0.0.0.0:3009
SSV_SERVER_READ_TIMEOUT=60

# Logging
SSV_LOG_FORMAT=json
SSV_LOG_LEVEL=info

# Rate Limiting
SSV_RATE_LIMIT_MAX=1000
SSV_RATE_LIMIT_WINDOW=60

# Database Configuration (PostgreSQL via Docker)
SSV_DB_HOST=localhost
SSV_DB_PORT=5432
SSV_DB_SSL=disable
SSV_DB_USER=postgres
SSV_DB_PASSWORD=secure_postgres_password
SSV_DB_DATABASE=pocket-pal
SSV_DB_MAX_CONNECTIONS=50

# Redis Configuration
SSV_REDIS_HOST=localhost
SSV_REDIS_PORT=6379
SSV_REDIS_DB=0
SSV_REDIS_USER=default
SSV_REDIS_PASS=secure_redis_password

# Telemetry - Connect to observability stack
SSV_OTLP_ENDPOINT=localhost:4317
SSV_JAEGER_ENDPOINT=http://localhost:14268/api/traces

# Telegram Bot Configuration
SSV_TELEGRAM_BOT_TOKEN=YOUR_BOT_TOKEN_HERE
SSV_TELEGRAM_DEBUG=false
SSV_TELEGRAM_ADMINS=YOUR_TELEGRAM_IDS_HERE

# OpenAI Configuration (if using AI features)
SSV_OPENAI_API_KEY=YOUR_OPENAI_API_KEY_HERE
SSV_OPENAI_MODEL=gpt-4o-mini
SSV_OPENAI_BASE_URL=https://api.openai.com/v1
SSV_OPENAI_MAX_TOKENS=300
SSV_OPENAI_TEMPERATURE=0.1

# Azure Services (if using)
SSV_AZURE_SPEECH_KEY=YOUR_AZURE_SPEECH_KEY_HERE
SSV_AZURE_SPEECH_REGION=eastus

# Cloud Storage
SSV_CLOUD_PROVIDER=azure
SSV_AZURE_STORAGE_CONNECTION_STRING=YOUR_AZURE_STORAGE_CONNECTION_STRING_HERE
SSV_AZURE_STORAGE_CONTAINER_NAME=files

# Azure Document Intelligence
SSV_AZURE_DOCUMENT_INTELLIGENCE_ENDPOINT=YOUR_AZURE_ENDPOINT_HERE
SSV_AZURE_DOCUMENT_INTELLIGENCE_API_KEY=YOUR_AZURE_API_KEY_HERE
SSV_AZURE_DOCUMENT_INTELLIGENCE_API_VERSION=2024-11-30
SSV_AZURE_DOCUMENT_INTELLIGENCE_RECEIPT_MODEL=prebuilt-receipt